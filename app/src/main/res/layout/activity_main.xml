<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Smart Assistive Glasses"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_connection_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â— Disconnected"
                android:textSize="16sp"
                android:textColor="#e74c3c"
                android:gravity="center"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome, Companion User"
                android:textSize="14sp"
                android:textColor="#7f8c8d"
                android:gravity="center"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Quick Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_connect_glasses"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Connect Glasses"
                android:textColor="@android:color/white"
                android:background="@drawable/button_primary"
                android:layout_marginEnd="8dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/btn_emergency"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Emergency"
                android:textColor="@android:color/white"
                android:background="@drawable/button_emergency"
                android:layout_marginStart="8dp"
                android:elevation="2dp" />

        </LinearLayout>

        <!-- Feature Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 3D Map Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_3d_map"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@drawable/gradient_blue">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_3d_map"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3D Room Map"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View real-time 3D environment"
                            android:textSize="14sp"
                            android:textColor="#ecf0f1"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/tv_obstacles_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 obstacles detected"
                            android:textSize="12sp"
                            android:textColor="#bdc3c7"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Navigation Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_navigation"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@drawable/gradient_green">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_navigation"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Navigation Assistant"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guide and audio assistance"
                            android:textSize="14sp"
                            android:textColor="#ecf0f1"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/tv_navigation_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Navigation inactive"
                            android:textSize="12sp"
                            android:textColor="#bdc3c7"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Settings Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_settings"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@drawable/gradient_purple">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_settings"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Settings & Configuration"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Customize app preferences"
                            android:textSize="14sp"
                            android:textColor="#ecf0f1"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
