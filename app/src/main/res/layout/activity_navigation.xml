<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:padding="16dp">

    <!-- Step Counter -->
    <TextView
        android:id="@+id/step_counter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Step 1 of 6"
        android:textSize="16sp"
        android:textColor="#6C757D"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Direction Arrow -->
    <ImageView
        android:id="@+id/direction_arrow"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@android:drawable/arrow_up_float"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/step_counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Instruction Text -->
    <TextView
        android:id="@+id/instruction_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome to navigation demo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#212529"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/direction_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Next Button -->
    <Button
        android:id="@+id/next_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Next Step"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/button_primary"
        android:textColor="@android:color/white"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/instruction_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back Button -->
    <Button
        android:id="@+id/back_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Back to Main"
        android:textSize="16sp"
        android:background="@android:color/transparent"
        android:textColor="#6C757D"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/next_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>