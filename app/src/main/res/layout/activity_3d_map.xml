<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Simulated Camera Background -->
    <View
        android:id="@+id/simulated_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/room_background" />

    <!-- Camera Layout Container for Overlays -->
    <FrameLayout
        android:id="@+id/camera_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <!-- Status Text Overlay -->
    <TextView
        android:id="@+id/info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Smart Glasses Demo"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:background="#DD000000"
        android:padding="12dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:gravity="center" />

    <!-- Analysis Control Button -->
    <Button
        android:id="@+id/describe_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Analysis"
        android:textColor="@android:color/white"
        android:background="@drawable/button_primary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="16dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp" />

    <!-- Back Button -->
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@android:color/white"
        android:background="@drawable/button_primary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="16dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp" />

</RelativeLayout>
